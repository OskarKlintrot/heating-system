@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#e8eaf6">
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Heating System</title>
    @Html.Partial("Layout/_Styles")
    @RenderSection("Styles", required: false)
    @Html.Raw(JavaScriptSnippet.FullScript)
    @Html.Partial("Layout/_GoogleAnalytics")
</head>
<body>
    <nav>
        @await Html.PartialAsync("Layout/Navigation/_Navigation")
    </nav>
    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer class="page-footer">
        @Html.Partial("Layout/_Footer")
    </footer>
    @Html.Partial("Layout/_Scripts")
    @RenderSection("Scripts", required: false)
</body>
</html>
