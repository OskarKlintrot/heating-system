{
  "name": "heating-domain",
  "version": "0.0.1",
  "description": "Interfaces for Mongoose schemas and MongoDB repositories.",
  "main": "lib/index.js",
  "typings": "lib/index",
  "author": "Oskar Klintrot",
  "license": "MIT",
  "engines": {
    "node": ">= 6.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OskarKlintrot/heating-system.git"
  },
    "keywords": [
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/OskarKlintrot/heating-system/issues"
  },
  "homepage": "https://github.com/OskarKlintrot/heating-system#readme",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "prebuild": "npm-run-all clean lint",
    "build": "tsc",
    "lint": "npm-run-all --parallel lint:src lint:tests",
    "lint:src": "tslint src/**/*.ts src/**/*.tsx ",
    "lint:tests": "tslint test/specs/**/*.ts test/specs/**/*.tsx",
    "pretest:build": "tsc --m umd -p ./tsconfig.json",
    "pretest": "npm-run-all build",
    "test": "cross-env NODE_ENV=test mocha test/specs/**/*.ts",
    "test:rerun": "cross-env NODE_ENV=test mocha test/specs/**/*.ts",
    "update:dependencies": "./node_modules/.bin/ncu -u",
    "watch:tests": "cross-env NODE_ENV=watch mocha test/specs/**/*.ts -R spec --bail --watch",
    "watch:build": "cross-env NODE_ENV=watch ./node_modules/.bin/tsc --skipLibCheck -p . -w"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.32",
    "@types/mongoose": "^4.5.39",
    "@types/node": "^6.0.46",
    "@types/sinon": "^1.16.31",
    "@types/sinon-chai": "^2.7.27",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "coveralls": "^2.11.14",
    "cross-env": "^3.1.3",
    "ignore-styles": "^5.0.1",
    "mocha": "^3.1.2",
    "mongoose": "^4.6.5",
    "npm-check-updates": "^2.8.6",
    "npm-run-all": "^3.1.1",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "ts-node": "^1.6.1",
    "tslint": "^3.15.1",
    "typescript": "^2.0.6"
  }
}
